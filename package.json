{
  "name": "crown--chrome_extension",
  "version": "2.0.0-beta",
  "private": true,
  "scripts": {
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "preanalyze": "vue-cli-service build --report",
    "analyze": "opn ./dist/report.html",
    "dev": "vue-cli-service build --watch --mode reloading",
    "docs": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "dependencies": {
    "material-design-icons-iconfont": "^3.0.3",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vuetify": "^1.2.5",
    "vuex": "^3.0.1",
    "vuex-persistedstate": "^2.5.4",
    "webextension-polyfill-ts": "^0.8.8"
  },
  "devDependencies": {
    "@vue/cli-plugin-typescript": "^3.0.4",
    "@vue/cli-service": "^3.0.4",
    "image-webpack-loader": "^4.3.1",
    "lint-staged": "^7.2.2",
    "opn-cli": "^3.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.0",
    "vue-cli-plugin-vuetify": "^0.2.0",
    "vue-template-compiler": "^2.5.17",
    "vuepress": "^0.14.4",
    "webpack-chrome-extension-reloader": "^0.8.3"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [ "Chrome >= 55" ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [ "vue-cli-service lint", "git add" ],
    "*.vue": [ "vue-cli-service lint", "git add" ]
  }
}
