// extend
.ext-cross
  &:before, &:after
    position: absolute
    top: 10px
    right: 0
    left: 0
    display: block
    margin: 0 auto
    width: 14px
    height: 2px
    border-radius: 5px
    background-color: #bf1e1e
    content: ''
    transition-duration: .3s

  &:before
    transform: rotateZ(45deg)

  &:after
    transform: rotateZ(-45deg)

.ext-ok
  &:before, &:after
    background-color: #0cb018

  &:before
    top: 11px
    left: -7px
    width: 6px

  &:after
    left: 5px
    width: 12px

// checkbox
.checkbox-on2off
  position: relative
  display: inline-block
  width: 55px
  height: 22px
  cursor: pointer

  .checkbox-on2off__toggle
    display: none

    &:checked + .checkbox-on2off__checker
      left: calc(100% - 22px)
      transform: rotateZ(360deg)
      @extends .ext-ok

  .checkbox-on2off__checker
    position: absolute
    top: 0
    left: 0
    z-index: 1
    display: block
    margin-left: 0
    width: 22px
    height: 22px
    @extends .ext-cross

  .checkbox-on2off__checker
    z-index: 2
    border-radius: 50%
    background-color: #fff
    box-shadow: 0 2px 6px rgba(0, 0, 0, .5)
    transition: .3s

    &:before, &:after
      transition-duration: .3s

  .checkbox-on2off__txt-left, .checkbox-on2off__txt-right
    position: absolute
    z-index: 1
    display: block
    margin-left: 0
    width: 23px
    color: #fff
    text-align: center
    font-size: 12px
    line-height: 22px

  .checkbox-on2off__txt-right
    right: 0

  .checkbox-on2off__bg
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    fill: #aaa
