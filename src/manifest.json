{
  "manifest_version": 2,
  "name": "Crown",
  "author": "@chenjuncrown",
  "homepage_url": "https://crown3.github.io/crown/",
  "description": "__MSG_extDesc__",
  "default_locale": "en",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [ "bookmarks", "sessions", "tabs" ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Crown",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "offline_enabled": true,
  "options_ui": {
    "chrome_style": true,
    "page": "options/options.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+X"
      }
    }
  },
  "omnibox": {
    "keyword": "c"
  }
}
