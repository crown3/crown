{
  "author": "@chenjuncrown",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "./crown.png",
    "default_popup": "./popup.html",
    "default_title": "Crown"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+X"
      }
    },
    "open-in-current-page": {
      "description": "open crown in current page",
      "global": true,
      "suggested_key": {
        "default": "Alt+S"
      }
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["./css/content.css"],
    "js": ["./js/runtime.js", "./js/vendor.js", "./js/content.js"]
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'",
  "description": "__MSG_extDesc__",
  "default_locale": "en",
  "homepage_url": "https://github.com/crown3/crown",
  "icons": {
    "16": "./crown.png",
    "48": "./crown.png",
    "128": "./crown.png"
  },
  "manifest_version": 2,
  "name": "Crown",
  "offline_enabled": true,
  "options_ui": {
    "chrome_style": true,
    "page": "./options.html"
  },
  "omnibox": {
    "keyword": "c"
  },
  "permissions": ["bookmarks", "chrome://favicon/", "tabs", "storage", "<all_urls>"],
  "version": "2.0.0",
  "web_accessible_resources": [
    "img/*"
  ]
}
